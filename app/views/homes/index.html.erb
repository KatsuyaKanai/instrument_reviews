<section class="section" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7)), url('<%= asset_path("IMG_0048.JPG") %>');">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <h1 class="title">
          <p class="is-size-1 has-text-weight-bold has-text-centered has-text-white">Wind Musical Instrument Review Please</p></br>
        </h1>
        <h2 class="subtitle">
           <p class="has-text-weight-bold has-text-centeres has-text-white">
            管楽器屋さん口コミサイトは、ユーザーの方の楽器修理、販売等の口コミの投稿により、様々な情報を参考にできるサイトです。プロの楽器演奏者、趣味で楽しむアマチュア楽器演奏者、学校の部活動の顧問の先生、皆様の口コミにより成り立っております。
           </p>
        </h2>
          <br>
          <div class="columns is-centered">
            <div class="column is-3">
            <% if user_signed_in? %>
            <% else %>
              <%= link_to "ログイン", new_user_session_path, class: "button is-fullwidth" %>
              <br>
              <%= link_to "新規登録", new_user_registration_path, class: "button is-fullwidth" %>
            <% end %>
            </div>
          </div>
          <section class="section">
            <div class="columns is-centered has-text-white ">

              <%= search_form_for @q, url: stores_path, method: :get, local: true do |f| %>
                <%= f.label :name_or_address_cont, "店名または都道府県を入力してください" %>
                <%= f.search_field :name_or_address_cont %>
                <%= f.submit '検索' %>
              <% end %>
            
              <%= form_with url: reviews_search_path, method: :get, local: true do |form| %>
                <%= form.label :search_instrument_name, "楽器名を選択してください", class:"reviews_post" %>
                <%= form.collection_select(:search_instrument_name, Instrument.all, :name, :name,{include_blank: "---"}) %>
                <%= form.submit "探す" %>
              <% end %>
            </div>
          </section>
      </div>
    </div>
  </div>
</section>

<section class="section" style="background: #dfe;>

  <div class="columns is-centered">
    <div class="column is-10">
      <h2 class="subtitle">
        <p class="has-text-weight-bold has-text-centered">
          最近の投稿
        </p>
      </h2>
      <% @recent_reviews.each do |review| %>
        <div class="container">
          
          <div class="columns">
            <div class="column is-5">
              <div class="card mb-6">
                <header class="card-header">
                  <p class="card-header-title">
                    <%= link_to "#{review.store.name}", store_reviews_path(review.store_id) %>
                  </p>
                  <p class="card-header-title">
                    <%= review.store.address %>
                  </p>
                </header>
                <div class="card-content">
                  <div class="content">
                    <%= review.store_reviews %>
                  </div>
                  <div class="content has-text-left">  
                    ¥<%= review.store_price %>円
                  </div>
                  <div class="content top-page-score has-text-entered">
                    <div class="star-rating mb-2">
                      <div class="star-rating-front" style="width: <%= review.score %>%">
                        ★★★★★
                      </div>
                      <div class="star-rating-back">
                        ★★★★★
                      </div>
                    </div>
                    <div class="average-score-display ml-3 pt-2">
                      <%= review.score %>点
                    </div>
                  </div>
                </div>
                <footer class="card-footer">
                  <p class="card-footer-item">
                    <%= review.user.name %>
                  </p>
                  <p class="card-footer-item">
                    <%= review.instrument_name %>
                  </p>
                  <p class="card-footer-item">
                    <%= l review.created_at, format: :short %>
                  </p>
                </footer>
                      
              </div>

            </div>

          </div>
        </div>
      <% end %>
