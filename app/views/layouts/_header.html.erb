<% if flash[:notice] %>
  <div class="notification is-info">
    <p class="notice"><%= notice %></p>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="notification is-danger">
    <p class="alert"><%= alert %></p>
  </div>
<% end %>
  <nav class="navbar has-background-white" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <p class="navbar-item">
        <%= link_to root_path do %>
          <strong class="is-size-3" style="font-family: cursive; color: black;">Wind Musical Instrument Review Please</strong>
        <% end %>
      </p>
      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>
    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-end">
          <%= link_to stores_path, class: "navbar-item has-text-black" do %>
            楽器店一覧
          <% end %>
        <div class="navbar-item">
          <% if user_signed_in? %>
            <%= link_to users_index_path, class: "navbar-item has-text-black" do %>
              ようこそ <%= current_user.name %> さん
            <% end %>
          <% end %>
          
            <div class="buttons"> 
              <% if user_signed_in? %>
                <%= link_to destroy_user_session_path, method: :delete, class: "button" do %>
                  ログアウト
                <% end %>
              <% else %>
                <%= link_to new_user_session_path, class: "button" do %>
                  ログイン
                <% end %>
                <%= link_to new_user_registration_path, class: "button" do %>
                  新規登録
                <% end %>
              <% end %>
            </div>
          
        </div>
      </div>
    </div>
  </nav>
