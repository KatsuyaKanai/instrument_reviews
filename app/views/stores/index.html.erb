<p>絞り込み検索</p>
<%= search_form_for @q, url: stores_path do |f| %>
  <%= f.label :name_or_address_cont, "店名または都道府県を入力してください" %>
  <%= f.search_field :name_or_address_cont %></br>
  <%= f.submit '検索' %>
<% end %>
<%= link_to "口コミを投稿したい店がない場合", new_store_path %>
<section class="section mt-6">
<thead>
  <tr>
    <th><%= sort_link(@q, :avg_score_count, "口コミ評価が高い順") %>|</th>
    <th><%= sort_link(@q, :review_id_count, "レビューの多い順") %>|</th>
    <th><%= sort_link(@q, :created_at, "登録日") %></th>
    <th colspan = "3"></th>
  </tr>
</thead>

  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <% @stores.each do |store| %>
          <div class="card mb-6">
            <header class="card-header">
            <%# <table>
              <thead>
                <tr class="card-header">
                  <th class="card-header-title">店名</th>
                  <th class="card-header-title">都道府県</th>
                  <th class="card-header-title">最寄駅</th>
                </tr>
              </thead> %>
                  <p class="card-header-title">
                    <%= store.name %>
                  </p>
                  <p class="card-header-title">
                    <%= store.address %>
                  </p>
                  <p class="card-header-title">
                    <%= store.nearest_station %>
                  </p>
            </header>
            <div class="card-content">
              <div class="content">
                <div class="content average-score">
                  <div class="star-rating mb-2">
                    <div class="star-rating-front" style="width: <%= store.reviews_score_percentage %>%">★★★★★</div>
                    <div class="star-rating-back">★★★★★</div>
                  </div>
                  <div class="average-score-display ml-3 pt-2">
                    <%= store.avg_score %>点（<%= store.reviews.count %>件のレビュー）
                  </div>
                </div>
              </div>
            </div>
            <footer class="card-footer">
              <%= link_to store_reviews_path(store), class: "button card-footer-item" do %>
                レビューを見る
              <% end %>
              <%= link_to store_path(store), class: "button card-footer-item" do %>
                レビューを書く
              <% end %>
            </footer>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
