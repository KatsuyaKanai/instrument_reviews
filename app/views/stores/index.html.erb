<p>絞り込み検索</p>
<%= form_with url: stores_path, method: :get, local: true do |form| %>
  <%= form.label :search_word, "店名か都道府県を入力してください" %>
  <%= form.text_field :search_word, value: @search_store, :placeholder => "店名もしくは住所を入力して下さい" %>
  <%= form.submit "探す" %>
<% end %>
<%= link_to "口コミを投稿したい店がない場合", new_store_path %>
<section class="section mt-6">
<%= link_to '楽器店の投稿の新しい順', stores_path(latest: "true") %>|
<%= link_to '楽器店の投稿の古い順', stores_path(old: "true") %>|

<%= link_to '評価の高い順', stores_path(reviews_score: "true") %>

  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <% @stores.each do |store| %>
          <div class="card mb-6">
            <header class="card-header">
              <p class="card-header-title">
                <%= store.name %>
              </p>
              <p class="card-header-title">
                <%= store.address %>
              </p>
              <p class="card-header-title">
                <%= store.nearest_station %>
              </p>
            </header>
            <div class="card-content">
              <div class="content">
                <div class="content average-score">
                  <div class="star-rating mb-2">
                    <div class="star-rating-front" style="width: <%= store.reviews_score_percentage %>%">★★★★★</div>
                    <div class="star-rating-back">★★★★★</div>
                  </div>
                  <div class="average-score-display ml-3 pt-2">
                    <%= store.avg_score %>点（<%= store.reviews.count %>件のレビュー）
                  </div>
                </div>
              </div>
            </div>
            <footer class="card-footer">
              <%= link_to store_reviews_path(store), class: "button card-footer-item" do %>
                レビューを見る
              <% end %>
              <%= link_to store_path(store), class: "button card-footer-item" do %>
                レビューを書く
              <% end %>
            </footer>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
