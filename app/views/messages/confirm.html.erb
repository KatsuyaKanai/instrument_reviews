<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h1 class="is-size-4 has-text-centered">
          内容確認
        </h1>
        <%= form_for @message, :url => done_path do |f| %>
          <%= render "shared/errors", object: @message %>
          <div class="field">
            <%= f.label :name, "名前" %>
            <p class="control has-icons-left">
              <%= f.text_field :name, autofocus: true, value: "#{@message.name}", readonly: true, class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <%= f.label :email, "Email" %>
            <p class="control has-icons-left">
              <%= f.text_field :email, autofocus: true, value: "#{@message.email}", readonly: true, class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <%= f.label :genre, "ジャンル" %>
            <p class="control has-icons-left">
              <%= f.text_field :genre, autofocus: true, value: "#{@message.genre}", readonly: true, class: "input" %>
            </p>
          </div>
          <div class="field">
            <%= f.label :content, "お問い合わせ内容" %>
            <p class="control has-icons-left">
              <%= f.text_area :content, autofocus: true, value: "#{@message.content}", readonly: true, class: "input" %>
            </p>
          </div>
          <div class="actions">
            <%= f.submit '送信する' %>
            <%= f.submit '戻る', name: 'back' %>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</section>
