<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h1 class="is-size-4 has-text-centered" id="otoiawase">
          お問い合わせ
        </h1>
        <%= form_with model: @message, url: done_path do |f| %>
          <%= render "shared/errors", object: @message %>
          <div class="field">
            <%= f.label :name, "名前" %>
            <p class="control has-icons-left">
              <%= f.text_field :name, autofocus: true, :placeholder => "名前を入力してください", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <%= f.label :email, "Email" %>
            <p class="control has-icons-left">
              <%= f.email_field :email, autofocus: true, :placeholder => "email", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <%= f.label :genre, "ジャンル" %>
            <p class="control">
              <%= f.collection_select(:genre, Genre.all, :name, :name,{include_blank: "▼選択してください"}, class: "input") %>
            </p>
          </div>
          <div class="field">
            <%= f.label :content, "お問い合わせ内容" %>
            <p class="control">
              <!-- これは罠です-->
              <%= f.text_field :message, id: "message" %>
              <%= f.text_area :content, placeholder: '楽器店の新規登録の場合、楽器店名、最寄駅、住所の詳細を記入してください', class: "textarea" %>
            </p>
          </div>
          <div class="actions">
            <%= f.submit '送信', class: "button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
